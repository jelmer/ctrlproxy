#!/usr/bin/make -f

build: build-stamp

build-stamp:
	dh_testdir
	./configure --prefix=/usr --includedir=/usr/include/ctrlproxy --mandir=/usr/share/man
	$(MAKE)
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	dh_clean
	-$(MAKE) distclean
	rm -f build-stamp

test:
	$(MAKE) test

test-stamp: test
	touch test-stamp

binary-indep: build test

binary-arch: build test
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) install DESTDIR=`pwd`/debian/tmp
	dh_install --sourcedir=debian/tmp -a --list-missing --fail-missing
	dh_strip -a
	dh_installdocs -a
	dh_installchangelogs -a 
	dh_installexamples -a 
	dh_installman -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: build clean binary-arch binary-indep binary
