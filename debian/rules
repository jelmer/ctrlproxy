#!/usr/bin/make -f

build: build-stamp

build-stamp:
	dh_testdir
	./autogen.sh
	./configure --prefix=/usr --includedir=/usr/include/ctrlproxy --mandir=/usr/share/man
	$(MAKE)
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	
	dh_clean
	-$(MAKE) distclean

binary-indep: build

binary-arch: build
	dh_testdir
	dh_testroot
	
	dh_clean -k
	dh_installdirs
	$(MAKE) install DESTDIR=`pwd`/debian/ctrlproxy
	dh_strip
	dh_installdocs -a
	dh_installchangelogs -a ChangeLog
	dh_installexamples -a ctrlproxyrc.example
	dh_installman -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: build clean binary-arch binary-indep binary
