CC = @CC@
prefix = @prefix@
exec_prefix = @exec_prefix@
CFLAGS = -fPIC -I.. -I../.. @CFLAGS@ @PKG_CFLAGS@ -DSHAREDIR=\"@datadir@\"
moddir = @libdir@/ctrlproxy
INSTALL = @INSTALL@

.PHONY: all clean distclean

all: libsocket.so

install:
	$(INSTALL) libsocket.so $(DESTDIR)$(moddir)

%.o: %.c
	$(CC) $(CFLAGS) -fPIC -c $<

libsocket.so: @SOCKET_OBJS@
	$(CC) $(CFLAGS) -shared -o $@ @SOCKET_OBJS@ @SSL_LIB@

clean:
	rm -f *.o *.so

distclean: clean
	rm -f Makefile
