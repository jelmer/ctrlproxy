CC = @CC@
prefix = @prefix@
exec_prefix = @exec_prefix@
moddir = @libdir@/ctrlproxy
INSTALL = @INSTALL@
CFLAGS = @PY_CFLAGS@ -fPIC -I.. @CFLAGS@ @PKG_CFLAGS@  -DSHAREDIR=\"@datadir@\"
LIBS = @PY_LIBS@

.PHONY all clean distclean install

all: libpython.so

install:
	$(INSTALL) libpython.so $(DESTDIR)$(moddir)

%.o: %.c
	$(CC) $(CFLAGS) -fPIC -c $<

libpython.so: python.o python_types.o
	$(CC) $(CFLAGS) -shared -o $@ $(LIBS) python_types.o python.o

clean:
	rm -f $(MODS) *.o

distclean: clean
	rm -f Makefile
